:host
  display flex
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.app-layout
  height 100vh

.menu-sidebar
  position relative
  z-index 10
  min-height 100vh
  box-shadow 2px 0 6px rgba(0,21,41,.35)

.header-trigger
  height 64px
  padding 20px 24px
  font-size 20px
  cursor pointer
  transition all .3s,padding 0s

.triggerhover
  color #1890ff

.sidebar-logo
  position relative
  height 64px
  display flex
  justify-content center
  overflow hidden
  line-height 64px
  background #001529
  transition all .3s

  &.minimized
    img
      width 64px

  img
    display inline-block
    height 32px
    width 132px
    vertical-align middle
    transition width .3s

nz-header
  padding 0
  width 100%
  z-index 2

.app-header
  position relative
  height 64px
  padding 0
  background #fff
  box-shadow 0 1px 4px rgba(0,21,41,.08)

nz-content
  margin 24px

.inner-content
  padding 24px
  background #fff
  height 100%

.m-r-10
  margin-right 10px

.m-l-10
  margin-left 10px
